    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP Address:"
            android:textSize="18sp"
            android:textColor="#0067a3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/host_TextView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:backgroundTint="#0067a3"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="31dp" />

        <Spinner
            android:id="@+id/spinner_ip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/btn_dropdown"
            android:dropDownWidth="wrap_content"
            android:popupBackground="#787A83"
            android:textSize="18sp"
            android:spinnerMode="dialog"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port Number:"
            android:textSize="18sp"
            android:textColor="#0067a3"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/port_number_EditText"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:backgroundTint="#0067a3"
            android:textColor="@color/black"
            android:inputType="numberSigned"/>
        <Button
            android:id="@+id/connect_btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:onClick="connect"
            android:background="@drawable/btn_blue"
            android:text="Connect" />

        <Button
            android:id="@+id/disconnect_btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:onClick="disconnect"
            android:background="@drawable/btn_blue"
            android:text="DisConn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/back_ground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination(m):"
            android:textColor="#0067a3"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/X_EditText2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:backgroundTint="#0067a3"
            android:textColor="@color/black"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/Y_EditText2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:backgroundTint="#0067a3"
            android:textColor="@color/black"
            android:inputType="numberSigned" />

        <Button
            android:id="@+id/enter_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_blue"
            android:onClick="DestinationSet"
            android:text="Enter" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="54dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="x,y(m):"
        android:textColor="#0067a3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/X_EditText"
        app:layout_constraintEnd_toStartOf="@+id/X_EditText"
        app:layout_constraintTop_toTopOf="@+id/back_ground"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/X_EditText"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:backgroundTint="#0067a3"
        android:textColor="@color/black"
        android:inputType="numberSigned"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/Y_EditText"
        app:layout_constraintEnd_toStartOf="@+id/Y_EditText"
        app:layout_constraintTop_toTopOf="@+id/Y_EditText"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Y_EditText"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:backgroundTint="#0067a3"
        android:textColor="@color/black"
        android:inputType="numberSigned"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@+id/back_ground"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
